<p id="notice"></p>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-3">
        <h2>User info</h2>
        <%= image_tag @user.get_profile_image(100,100) %>
        <table class="table">
          <tbody>
            <tr>
	            <th>name</th>
	            <th><%= @user.name %></th>
            </tr>
            <tr>
	            <th>introduction</th>
	            <th><%= @user.introduction %></th>
            </tr>
          </tbody>
        </table>
        <%= link_to edit_user_path(@user.id), class: "btn btn-outline-secondary btn-block" do %>
          <i class="fas fa-user-cog" aria-hidden="true"></i>
        <% end %>
    	  <h2>New book</h2>
          <%= form_with model: @book, url: books_path(@user.id), method: :post do |f| %>
            <label for="book_title">Title</label><br>
            <%= f.text_field :title %><br>
            <label for="book_opinion">Opinion</label><br>
            <%= f.text_area :body %><br>
            <input type="submit" name="commit" value="Create Book" class="btn btn-success" data-disable-with="Create Book">
          <% end %>
          <h2>Books</h2>
            <table class="table table-hover table-inverse">
              <thead>
                <tr>
                  <th></th>
                  <th>Title</th>
                  <th>Opinion</th>
                  <th colspan="3"></th>
                </tr>
              </thead>
              <tbody>
                <tr>
                  <td>
                    <img src="aaaaaaaaaaaaa">
                      <%= link_to book_path(@user.id) %>
                  </td>
                  <td><a class="book_99973" href="/books/99973">リーダブルコード</a></td>
                  <td>より良いコードを書くためのシンプルで実践的なテクニック。</td>
